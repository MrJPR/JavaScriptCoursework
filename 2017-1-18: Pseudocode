<body>

<p>To reveal your prize, pick a door, any door from the menu!</p>


<select id="MyDoor" onchange="Door()">
 <option value="Door 1">Door 1
 <option value="Door 2">Door 2
 <option value="Door 3">Door 3
</select>

<p id="answer"></p>

<script>
function Door() {
 var x = document.getElementById("MyDoor").value;
 
if (x == "Door 1"){
 x += "x";
 }

else if(x == "Door 2"){
 "y";
 }

else {
x += "z";
}

 document.getElementById("answer").innerHTML = "You win ";
}
</script>

